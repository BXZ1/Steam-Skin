toolwindow.layout
{
	colors
	{
		PropertySheet.TabGap=-4
	}

	styles
	{
		ToolWindow
		{
			minimum-width=700
			minimum-height=600
			bgcolor="window_bg"
			render_bg
			{
				0="fill(x0, y0, x1, y0+96, headerbar_backdrop)"
				1="fill(x0, y0+47, x1, y0+48, headerbar_shade)"
				2="fill(x0, y0+95, x1, y0+96, headerbar_shade)"
			}
			render
			{
				0="fill(x0, y0, x1, y0+1, window_border)"
				1="fill(x0, y1-1, x1, y1, window_border)"
				2="fill(x0, y0+1, x0+1, y1-1, window_border)"
				3="fill(x1-1, y0+1, x1, y1-1, window_border)"
			}
		}
		ToolWindow:framefocus
		{
			render_bg
			{
				0="fill(x0, y0, x1, y0+96, headerbar_bg)"
				1="fill(x0, y0+47, x1, y0+48, headerbar_shade)"
				2="fill(x0, y0+95, x1, y0+96, headerbar_shade)"
			}
		}

		Button
		{
			minimum-width=38
			minimum-height=30
			textcolor=none
			render_bg {}
			render
			{
				0="image(x0+15, y0+7, x1-7, y1-7, assets/icons/new_tab_backdrop)"
			}
		}
		Button:framefocus
		{
			render
			{
				0="image(x0+15, y0+7, x1-7, y1-7, assets/icons/new_tab)"
			}
		}
		Button:hover
		{
			render_bg
			{
				0="fill(x0+14, y0, x1-6, y1, button_bg)"
				1="fill(x0+8, y0+6, x0+14, y1-6, button_bg)"
				2="fill(x1-6, y0+6, x1, y1-6, button_bg)"
				3="image(x0+8, y0, x0+14, y0+6, assets/corners/6_w10/tl)"
				4="image(x1-6, y0, x1, y0+6, assets/corners/6_w10/tr)"
				5="image(x0+8, y1-6, x0+14, y1, assets/corners/6_w10/bl)"
				6="image(x1-6, y1-6, x1, y1, assets/corners/6_w10/br)"
			}
		}
		Button:active
		{
			render_bg
			{
				0="fill(x0+14, y0, x1-6, y1, button_hover_bg)"
				1="fill(x0+8, y0+6, x0+14, y1-6, button_hover_bg)"
				2="fill(x1-6, y0+6, x1, y1-6, button_hover_bg)"
				3="image(x0+8, y0, x0+14, y0+6, assets/corners/6_w15/tl)"
				4="image(x1-6, y0, x1, y0+6, assets/corners/6_w15/tr)"
				5="image(x0+8, y1-6, x0+14, y1, assets/corners/6_w15/bl)"
				6="image(x1-6, y1-6, x1, y1, assets/corners/6_w15/br)"
			}
		}

		PageTab
		{
			inset="0 0 8 0"
			padding="8 0 32 0"
			minimum-height=30
			font-family=basefont
			font-size=15
			font-weight=400
			font-style=none
			textcolor="button_fg"
			render {}
		}
		PageTab:hover
		{
			render_bg
			{
				0="fill(x0+13, y0, x1-6, y1, button_hover_bg)"
				1="fill(x0+7, y0+6, x0+13, y1-6, button_hover_bg)"
				2="fill(x1-6, y0+6, x1, y1-6, button_hover_bg)"
				3="image(x0+7, y0, x0+13, y0+6, assets/corners/6_w15/tl)"
				4="image(x1-6, y0, x1, y0+6, assets/corners/6_w15/tr)"
				5="image(x0+7, y1-6, x0+13, y1, assets/corners/6_w15/bl)"
				6="image(x1-6, y1-6, x1, y1, assets/corners/6_w15/br)"
			}
		}
		PageTab:selected
		{
			render_bg
			{
				0="fill(x0+13, y0, x1-6, y1, button_hover_bg)"
				1="fill(x0+7, y0+6, x0+13, y1-6, button_hover_bg)"
				2="fill(x1-6, y0+6, x1, y1-6, button_hover_bg)"
				3="image(x0+7, y0, x0+13, y0+6, assets/corners/6_w15/tl)"
				4="image(x1-6, y0, x1, y0+6, assets/corners/6_w15/tr)"
				5="image(x0+7, y1-6, x0+13, y1, assets/corners/6_w15/bl)"
				6="image(x1-6, y1-6, x1, y1, assets/corners/6_w15/br)"
			}
		}
		PageTab:selected:hover
		{
			render_bg
			{
				0="fill(x0+13, y0, x1-6, y1, button_hover_bg)"
				1="fill(x0+7, y0+6, x0+13, y1-6, button_hover_bg)"
				2="fill(x1-6, y0+6, x1, y1-6, button_hover_bg)"
				3="image(x0+7, y0, x0+13, y0+6, assets/corners/6_w15/tl)"
				4="image(x1-6, y0, x1, y0+6, assets/corners/6_w15/tr)"
				5="image(x0+7, y1-6, x0+13, y1, assets/corners/6_w15/bl)"
				6="image(x1-6, y1-6, x1, y1, assets/corners/6_w15/br)"
				7="fill(x0+13, y0, x1-6, y1, button_disabled_bg)"
				8="fill(x0+7, y0+6, x0+13, y1-6, button_disabled_bg)"
				9="fill(x1-6, y0+6, x1, y1-6, button_disabled_bg)"
				10="image(x0+7, y0, x0+13, y0+6, assets/corners/6_w5/tl)"
				11="image(x1-6, y0, x1, y0+6, assets/corners/6_w5/tr)"
				12="image(x0+7, y1-6, x0+13, y1, assets/corners/6_w5/bl)"
				13="image(x1-6, y1-6, x1, y1, assets/corners/6_w5/br)"
			}
		}

		TabCloseButton
		{
			render {}
		}
	}

	layout
	{
		place { control="frame_close" align=right spacing=14 margin-right=12 y=12 }
		place { control="ToolWindowSheet" width=max height=max margin-top=5 }

		region { name="hidden" width=0 height=0 margin-left=-999 }
		place { control="frame_minimize,frame_maximize" region="hidden" width=0 height=0 }
	}
}
