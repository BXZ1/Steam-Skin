			bgcolor="window_bg"
			font-family=basefont
			font-size=16
			font-weight=400
			font-style=none
			textcolor="button_fg"
			shadowtextcolor="button_disabled_fg"
			selectedtextcolor="button_fg"
			selectedbgcolor="button_bg"
			render_bg {}
			render {}
		}

		ListPanelInterior
